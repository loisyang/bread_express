<div class="row padding-top">
  <% unless sidebar.blank? %>
    <div class="small-8 columns">
      <!-- primary partial gets displayed here in main div -->
      <%= render partial: "#{primary}" %>
      <!-- sometimes we want another partial below -->
      <% unless secondary.nil? %>
        <p>&nbsp;</p>
        <%= render partial: "#{secondary}" %>
      <% end %>
    </div>
    <div class="small-4 columns">
      <!-- render the sidebar, if it exists -->
      <%= render partial: "#{sidebar}" %>
    </div>
  <% else %>
    <div class="small-8 small-offset-2 columns">
      <!-- primary partial gets displayed here in main div -->
      <%= render partial: "#{primary}" %>
      <!-- sometimes we want another partial below -->
      <% unless secondary.nil? %>
        <p>&nbsp;</p>
        <%= render partial: "#{secondary}" %>
      <% end %>
    </div>  
  <% end %>
</div>

<div class="row padding-bottom">
  <div class="small-5 small-offset-5 columns">
    <!-- Add a button for new instances of object -->
    <%= link_to(eval("new_#{model_name}_path"), class: "button radius") do %>
    <!-- <i class="fa fa-plus"></i> -->
    Add a New <%= model_name.capitalize %>
    <% end %>
  </div>
</div>