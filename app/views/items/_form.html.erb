<%= simple_form_for @item, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item</legend>

    <%= f.input :name, input_html: {class: "avg"} %>
    <%= f.input :description, input_html: {class: "avg"} %>
    <%= f.input :category, collection: Item::CATEGORIES, include_blank: true, input_html: {class: "avg"} %> 
    <%= f.input :units_per_item, input_html: {class: "avg"} %>
    <%= f.input :weight, input_html: {class: "avg"} %>    
    <%= f.input :active, input_html: {} %>

<!--     <div class="large-6 columns">
      <label>Check these out</label>
      <input id="checkbox1" type="checkbox"><label for="checkbox1">Checkbox 1</label>
      <input id="checkbox2" type="checkbox"><label for="checkbox2">Checkbox 2</label>
    </div> -->
    <div class="field">
      <p><%= f.label :picture %><%= f.file_field :picture %></p>
  </div>    
    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <% if @item.name.nil? %>
        <%= link_to 'Back to all items', items_path, :class => 'button alert radius' %>
      <% else %>
        <%= link_to 'Cancel', item_path(@item), :class => 'button alert radius' %>
      <% end %>
    </div>
  </fieldset>
<% end %>