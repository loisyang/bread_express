<h3>Similar Items</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @similar_items.each do |item| %>
      <% if (can? :read, item) && (item != @item)%>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td>
            <% if item.picture_url == nil%>
              <p><%= image_tag ('placeholder.png'),class: "img-resize"%></p>
            <% else %>
              <%= image_tag (item.picture_url), class: "img-resize" %>
            <% end %>
          </td>
          <td><%= item.description unless item.description == nil %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @similar_items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  

