<div class="row">
	<div class="medium-10 medium-offset-1 columns">
    <% if @active_items.empty? %>
      <h3>Empty Menu</h3>
    <% else %>
      <h3>Current Menu</h3>
      <%= render :partial => "active_items" %>
    <% end %>
	</div>
</div>

<% if logged_in? && current_user.role?(:admin) %>
	<div class="row">
		<div class="medium-10 medium-offset-1 columns">
      <h3>Inactive Items</h3>
			<%= render :partial => "inactive_items" unless @inactive_items.empty? %>
		</div>
	</div>

	<!-- Add a button for new projects -->
  <div class="row">
    <div class="medium_10 medium-offset-1 columns">
    	<%= link_to(new_item_path, class: "button radius") do %>
    	  &nbsp;Add a New Item
    	<% end %>
    </div>
  </div>
<% end %>

